@using DAO.Models
@model SportStore.Models.ViewModels.depricated.CartIndexViewModel

<div class="what-with-style">TEST BLOCK</div>

<div>
@foreach (ProductLine cartLine in Model.Cart.CartLines)
{
    <div>Id:@cartLine.Product.Id, Product: @cartLine.Product.Name - @cartLine.Amount</div>
    <form asp-action="Remove" asp-controller="Cart" asp-route-productId="@cartLine.Product.Id" asp-route-returnUrl="@Model.ReturnUrl">
        <button type="submit">Remove</button>
    </form>
}
<a href="@Model.ReturnUrl">Back</a>
<a asp-controller="Order" asp-action="CheckOut">Checkout</a>
</div>