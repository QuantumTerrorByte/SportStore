@model DAO.Models.ProductModel.Product
<link rel="stylesheet" href="/css/">
<tr>
    <td class="text-right tablePadding">@Model.Id</td>
    <td>@Model.Name</td>
    <td class="text-right tablePadding">@Model.PriceUsd.ToString("c")</td>
    <td class="text-center tablePadding">@Model.NavCategoryFirstLvl</td>
    <td class="text-center tablePadding">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@Model.Id">Edit</a>
            <input type="hidden" name="Id" value="@Model.Id"/>
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>