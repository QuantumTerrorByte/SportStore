@model LeftBarViewModel


<a class=@(Model.CurrentCategory == null ? "leftBarCurrentButton" : "leftBarButton")
   asp-action="Index"
   asp-controller="Product"
   asp-route-category=""
   asp-route-productPage="1">
    Home
</a>
@foreach (var category in Model.Categories)
{
    <a class=@(Model.CurrentCategory == category.ValueEn ? "leftBarCurrentButton" : "leftBarButton")
       asp-action="Index"
       asp-controller="Product"
       asp-route-category="@category.ValueEn"
       asp-route-productPage="1">
        @category.ValueEn
    </a>
}