@model IEnumerable<Product>
@{
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="/css/AdminIndex.css">

<div class="text-center">
    <form asp-action="CreateProduct" method="get">
        <input name="Count" value="1" class="btn btn-sm" style="border: solid black 1px"/>
        <button type="submit" class="btn btn-danger btn-sm">Create</button>
        <a asp-action="Edit" asp-controller="Admin" asp-route-id="-1" class="btn btn-danger btn-sm">Edit all</a>
    </form>
</div>

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Category</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td class="text-right tablePadding">@product.Id</td>
            <td>@product.Name</td>
            <td class="text-right tablePadding">@product.Price.ToString("c")</td>
            <td class="text-center tablePadding">@product.Category</td>
            <td class="text-center tablePadding">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@product.Id">Edit</a>
                    <input type="hidden" name="Id" value="@product.Id"/>
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>