@model ProductsListViewModel;
@addTagHelper PageLinkTagHelper, SportStore;



<div class="products-block">
    @foreach (Product product in Model.Products)
    {
        <div class="product-block">
            <div class="product-block-Left">
                <div class="product-img-holder"></div>
                <div class="product-category">
                    Category:<br>
                    @product.Category
                </div>
            </div>
            <div class="product-block-right">
                <div>
                    <div class="product-id">Id: @product.Id</div>
                    <div class="product-name">Name: @product.Name</div>
                </div>
                <div class="product-description">@product.Description</div>
                <div class="product-price">Price is @product.Price</div>
            </div>
        </div>
    }
    <div page-model="@Model.PagingInfo"></div>
</div>
